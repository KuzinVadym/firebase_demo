{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es5",
    "lib": [
      "es2016",
      "es2017",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ]
}